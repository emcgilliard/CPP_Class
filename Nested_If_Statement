//This shows how to use an if then statement with braces

#include <iostream>

using namespace std;

int main()
{

    double fuel_gauge_reading;
    
    cout << "Enter fule gauge reading: ";
    cin >> fuel_gauge_reading;
    
    cout << "first with braces:\n";
    
    if (fuel_gauge_reading < 0.75)
    {
        if (fuel_gauge_reading < 0.25)
            cout << "Feul very low. Caution!\n";
    }
    else 
    {
        cout << "Fuel over 3/4. Don't stop now!\n";
    }

    return 0;
}



