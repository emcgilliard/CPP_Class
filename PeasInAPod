#include <iostream>
using namespace std;
 
int main() {
	int numberOfPods, peasPerPod, total_peas;
 
	cout << "Press return after entering a number\n";
	cout << "Enter the number of pods:\n";
 
	cin >> numberOfPods;
 
	cout << "Enter the number of peas in a pod:\n";
 
	cin >> peasPerPod;
 
	total_peas = numberOfPods * peasPerPod;
 
	cout << "if you have ";
	cout << numberOfPods;
	cout << " pea pods \n";
	cout << "and ";
	cout << peasPerPod;
	cout << " peas in each pod, then\n";
	cout << "you have ";
	cout << total_peas;
	cout << " peas in all the pods.\n";
 
 
	return 0;
}
